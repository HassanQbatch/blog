<h1>Add User</h1>

<%= form_tag("/users", method: "post") do %>
	<p>
	<%= label_tag(:name) %>
	<%= text_field_tag(:name)%>
	</p>

	<p>
	<%= label_tag(:email) %>
	<%= email_field_tag(:email) %>
	</p>

	<p>
	<%= label_tag(:password) %>
	<%= password_field_tag(:password) %>
	</p>

	<p>
	<%= label_tag(:date) %>
	<%= date_field_tag(:date) %>
	</p>

	<p>
	<%= label_tag(:color) %>
	<%= color_field_tag(:color) %>
	</p>

	<p>
	<%= submit_tag("Submit") %>
	</p>

<% end %>
