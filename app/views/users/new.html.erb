<h1>Add User</h1>

<%= form_tag("/users", method: "post") do %>
	<p>
	<%= label_tag(:name) %>
	<%= text_field(:user,:name)%>
	</p>

	<p>
	<%= label_tag(:email) %>
	<%= email_field(:user,:email) %>
	</p>

	<p>
	<%= label_tag(:password) %>
	<%= password_field(:user,:password) %>
	</p>

	<p>
	<%= label_tag(:date) %>
	<%= date_field(:user,:date) %>
	</p>

	<p>
	<%= label_tag(:color) %>
	<%= color_field(:user,:color) %>
	</p>

	<p>
	<%= submit_tag("Submit") %>
	</p>

<% end %>
